%p#notice= notice
%h1 Список поездов
%table
  %thead
    %tr
      %th Номер поезда
      %th{:colspan => "3"}
  %tbody
    - @trains.each do |train|
      %tr
        %td= train.number
        %td= link_to 'Показать', train
        %td= link_to 'Редактировать', edit_train_path(train)
        %td= link_to 'Удалить', train, method: :delete, data: { confirm: 'Вы уверены?' }
%br/
= link_to 'Добавить поезд', new_train_path
