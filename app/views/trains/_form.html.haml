= form_for(@train) do |f|
  = render 'common/errors', resource: @train
  .field
    = f.label :number
    %br/
    = f.text_field :number
  .field
    = f.label :current_station, "Текущая станция"
    = f.collection_select :current_station, RailwayStation.all, :id, :title
  .actions
    = f.submit "#{ @train.new_record? ? 'Создать' : 'Изменить'}"
